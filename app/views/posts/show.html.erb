<%= @post.title %><br> 
<%= @post.content %><br> 

<% @post.comments.each do |c| %>
<% user = User.find(c.user_id) %> 
<%= user.username %> says: 
<%= c.content %> 
<% end %> 


<%= form_for(@post.comments.build) do |f| %> 
<%= f.hidden_field :post_id, value: @post.id %>
<%= f.label :content %>
<%= f.text_area :content %>
<%= f.collection_select :user_id, User.all, :id, :username %>  
<%= f.submit %> 
<% end %> 